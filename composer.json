    "akrabat/rka-ip-address-middleware": "^0.4.0",
    "zendframework/zend-servicemanager": "^3.1",
    "jenssegers/agent": "^2.3",
    "sendgrid/sendgrid": "^5.0",
    "vlucas/phpdotenv": "^2.3",
    "zendframework/zend-filter": "^2.7",
    "adamwathan/bootforms": "^0.8.1",
    "zendframework/zend-uri": "^2.5",
    "akrabat/rka-slim-session-middleware": "^2.0",
    "mnapoli/front-yaml": "^1.5"
  },
  "autoload": {
    "psr-4": {
      "PhpSchool\\Website\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpSchool\\WebsiteTest\\": "test/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5",
    "squizlabs/php_codesniffer": "^2.6"
  },
  "scripts" : {
    "test": [
      "@phpunit",
      "@cs"
    ],
    "phpunit": "phpunit",
    "cs" : "phpcs",
    "cs-fix": "phpcbf"
  }
}
