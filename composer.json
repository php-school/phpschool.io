  "require": {
    "php": "~7.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "php-di/slim-bridge": "^0.2.1",
    "php-school/php-workshop": "^1.0",
    "mnapoli/silly-php-di": "^1.0",
    "symfony/finder": "^3.0",
    "psr/cache": "^1.0",
    "symfony/cache": "^3.2",
    "predis/predis": "^1.1",
    "league/commonmark": "^0.13",
    "doctrine/orm": "^2.5",
    "ramsey/uuid-doctrine": "^1.2",
    "tightenco/collect": "^5.8",
    "slim/flash": "^0.1.0",
    "zendframework/zend-authentication": "^2.5",
    "zendframework/zend-session": "^2.7",
    "knplabs/github-api": "^1.7",
    "zendframework/zend-inputfilter": "^2.7",
